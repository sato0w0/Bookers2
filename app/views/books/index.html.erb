<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this obj from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="container">
  <div class= "row">

    <!--左側要素-->
    <div class= "col-md-3">
      <h2>User info</h2>
      <table class='table'>
        <%= image_tag @user.get_profile_image %>
        <tr>
          <td><strong>name</strong></td>
          <td><strong><%= @user.name %></strong></td>
        </tr>
        <tr>
          <td><strong>introduction</strong></td>
          <td><strong><%= @user.introduction %></strong></td>
        </tr>
      </table>
      <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block mb-3 mt-5" do %>
        <i class="fas fa-user-cog"></i>
      <% end %>

      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <h6>Title</h6>
        <%= f.text_field :title %>
        <h6>Opinion</h6>
        <%= f.text_area :body %>
        <%= f.submit 'Create Book',class: "btn btn-success" %>
      <% end %>
    </div>

    <!--右側要素-->
    <div class= "col-md-8 offset-md-1">
      <h2>Books</h2>
      <table class='table'>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>

        <% @books.each do |book| %>
          <%= link_to user_path(@user.id) do %>
          <tr>
            <td>
              <%= link_to user_path(book.user_id) do %>
                <%= image_tag book.user.get_profile_image, size:"80x80" %>
              <% end %>
            </td>
            <td><%=link_to book.title, book_path(book.id)%></td>
            <td><%= book.body %></td>
          </tr>
          <% end %>
        <% end %>
      </table>
    </div>

  </div>
</div>